@model UI.Dtos.LoginDto

@{
    ViewData["Title"] = "Login";
    Layout = null; // No layout page will be used
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Your Application</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />

    <link rel="stylesheet" href="~/css/login.css" />
</head>
<body>

    <div class="login-container">
        <div class="login-box">
            <h2>Login</h2>
            <form asp-action="Login" method="post">

                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                <div class="form-group">
                    <label asp-for="Username" class="visually-hidden">Username</label>
                    <input asp-for="Username" class="form-control" placeholder="Username or Email" />
                    <span asp-validation-for="Username" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Password" class="visually-hidden">Password</label>
                    <input asp-for="Password" class="form-control" placeholder="Password" type="password" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <button type="submit" class="btn btn-primary">Login</button>
                </div>


            </form>
        </div>
    </div>

    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

</body>
</html>